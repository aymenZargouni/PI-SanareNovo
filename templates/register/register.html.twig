{% extends 'base.html.twig' %}

{% block title %}Créer Compte Patient{% endblock %}

{% block body %}
<style>
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-form {
        max-width: 500px;
        width: 100%;
        padding: 40px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .register-form h1 {
        font-size: 28px;
        text-align: center;
    }

    .register-form .form-control {
        height: 50px;
        font-size: 18px;
    }

    .register-form .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
    }

    .register-form button {
        height: 50px;
        font-size: 18px;
    }
</style>

<div class="register-container">
    <div class="register-form">
        <h1 class="h3 mb-4 font-weight-bold">Créer Compte Patient</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form'}}) }}

        <div class="mb-3">
            {{ form_label(form.fullname, 'Full Name', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.fullname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter full name'} }) }}
            <div class="error-message">{{ form_errors(form.fullname) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.gender, 'Gender', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}
            <div class="error-message">{{ form_errors(form.gender) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.adress, 'Address', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.adress, { 'attr': {'class': 'form-control', 'placeholder': 'Enter address'} }) }}
            <div class="error-message">{{ form_errors(form.adress) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter email'} }) }}
            <div class="error-message">{{ form_errors(form.email) }}</div>
        </div>

        <div class="mb-3">
            {{ form_label(form.password, 'Password', {'label_attr': {'class': 'fw-bold'}}) }}
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Enter password'} }) }}
            <div class="error-message">{{ form_errors(form.password) }}</div>
        </div>

        <button type="submit" class="btn btn-lg btn-primary w-100 mt-4">Register</button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
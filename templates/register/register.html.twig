{% extends 'base.html.twig' %}

{% block title %}Créer Compte Patient{% endblock %}

{% block body %}
<style>
    .register-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .register-form {
        max-width: 500px;
        width: 100%;
        padding: 40px;
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
    }

    .register-form h1 {
        font-size: 28px;
        text-align: center;
    }

    .register-form .form-control {
        height: 50px;
        font-size: 18px;
    }

    .register-form button {
        height: 50px;
        font-size: 18px;
    }
</style>

<div class="register-container">
    <form method="post" class="register-form">
        <h1 class="h3 mb-4 font-weight-bold">Créer Compte Patient</h1>

        {{ form_start(form) }}
            <label for="fullname" class="fw-bold">Full Name</label>
            {{ form_widget(form.fullname, { 'attr': {'class': 'form-control', 'placeholder': 'Enter full name'} }) }}

            <label for="gender" class="fw-bold mt-3">Gender</label>
            {{ form_widget(form.gender, { 'attr': {'class': 'form-control'} }) }}

            <label for="adress" class="fw-bold mt-3">Address</label>
            {{ form_widget(form.adress, { 'attr': {'class': 'form-control', 'placeholder': 'Enter address'} }) }}

            <label for="email" class="fw-bold mt-3">Email</label>
            {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Enter email'} }) }}

            <label for="password" class="fw-bold mt-3">Password</label>
            {{ form_widget(form.password, { 'attr': {'class': 'form-control', 'placeholder': 'Enter password'} }) }}

            <button type="submit" class="btn btn-lg btn-primary w-100 mt-4">Register</button>
        {{ form_end(form) }}
    </form>
</div>
{% endblock %}

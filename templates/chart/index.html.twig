{% extends 'base.html.twig' %}

{% block title %}Consultations by Motif{% endblock %}

{% block body %}
    <h1>Consultations by Motif</h1>

    <div id="chart_div" style="width: 900px; height: 500px;"></div>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        google.charts.load('current', {'packages':['bar']});  // Make sure to use the 'bar' package
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            // Convert JSON to JavaScript object
            var data = google.visualization.arrayToDataTable({{ chartJson|raw }}); 

            // Parse the options JSON object
            var options = {{ optionsJson|raw }}; 

            // Initialize the bar chart
            var chart = new google.charts.Bar(document.getElementById('chart_div'));

            // Draw the chart with data and options
            chart.draw(data, google.charts.Bar.convertOptions(options));
        }
    </script>
{% endblock %}

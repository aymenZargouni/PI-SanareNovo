{% extends 'admin.html.twig' %}

{% block title %}Update Comment{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-warning"><i class="fas fa-edit"></i> Edit Comment</h2>

        {% if success is defined and success %}
            <div class="alert alert-success text-center"><i class="fas fa-check-circle"></i> Comment updated successfully!</div>
        {% endif %}

        {{ form_start(formComment, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
            <div class="mb-3">
                {{ form_label(formComment.content, 'Comment', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(formComment.content, { 'attr': { 'class': 'form-control', 'rows': 5, 'placeholder': 'Update your comment...' } }) }}
                {{ form_errors(formComment.content) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Save Changes</button>
                <a href="{{ path('show_comments', {id: comment.blog.id}) }}" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to Comments</a>
            </div>
        {{ form_end(formComment) }}
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire - {{ blog.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4 rounded">
                <h2 class="mb-4 text-center text-primary">
                    <i class="fas fa-comment-dots"></i> Ajouter un commentaire
                </h2>
                    <!-- Font Awesome CDN -->
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

                <!-- Image et titre du blog -->
                <div class="text-center mb-3">
                    {% if blog.image %}
                        <img src="{{ asset('uploads/images/' ~ blog.image) }}" class="img-fluid rounded shadow-sm" alt="Blog Image" style="max-height: 200px;">
                    {% endif %}
                    <h4 class="mt-3 text-dark">{{ blog.title }}</h4>
                </div>

                <div class="comment-form">
                    <h4 class="text-center text-secondary">Laisser un commentaire</h4>

                    {{ form_start(form, {'attr': {'class': 'form-contact comment_form'}}) }}
                        <div class="mb-3">
                            {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Ã‰crivez votre commentaire ici...'}}) }}
                            {{ form_errors(form.content) }} 
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="fas fa-paper-plane"></i> Envoyer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>

                <div class="mt-4 text-center">
                    <a href="{{ path('show_comments', {id: blog.id}) }}" class="btn btn-outline-info me-2">
                        <i class="fas fa-eye"></i> Voir les commentaires
                    </a>
                    <a href="{{ path('blog_details', {id: blog.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour au blog
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

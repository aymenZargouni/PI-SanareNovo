{% extends 'admin.html.twig' %}

{% block title %}Ajouter un commentaire - {{ blog.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-center"><i class="fas fa-comment"></i> Ajouter un commentaire pour : {{ blog.title }}</h2>

        <div class="comment-form">
            <h4 class="text-center">Laisser un commentaire</h4>
            
            {{ form_start(form, {'attr': {'class': 'form-contact comment_form'}}) }}
                <div class="mb-3">
                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Ã‰crivez votre commentaire ici...'}}) }}
                    {{ form_errors(form.content) }} 
                </div>
                
                <div class="text-center">
                    <button type="submit" class="btn btn-success"> <i class="fas fa-paper-plane"></i> Envoyer</button>
                </div>
            {{ form_end(form) }}
        </div>

        <div class="mt-3 text-center">
            <a href="{{ path('show_comments', {id: blog.id}) }}" class="btn btn-info"> <i class="fas fa-eye"></i> Voir les commentaires</a>
            <a href="{{ path('blog_details', {id: blog.id}) }}" class="btn btn-secondary"> <i class="fas fa-arrow-left"></i> Retour au blog</a>
        </div>
    </div>
</div>
{% endblock %}

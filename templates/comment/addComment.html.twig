{% extends 'base.html.twig' %}

{% block title %}Ajouter un commentaire - {{ blog.title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4 rounded">
                <h2 class="mb-4 text-center text-primary">
                    <i class="fas fa-comment-dots"></i> Ajouter un commentaire
                </h2>
                
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle"></i> {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle"></i> {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                {{ form_start(form, {'attr': {'class': 'form-contact comment_form'}}) }}
                    <div class="mb-3">
                        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': 5, 'placeholder': 'Ã‰crivez votre commentaire ici...'}}) }}
                        {{ form_errors(form.content) }} 
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="fas fa-paper-plane"></i> Envoyer
                        </button>
                    </div>
                {{ form_end(form) }}

                <div class="mt-4 text-center">
                    <a href="{{ path('showBlogPatient', {id: blog.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Retour au blog
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

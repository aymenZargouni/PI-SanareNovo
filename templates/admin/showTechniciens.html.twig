{% extends 'admin.html.twig' %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-lg-10 d-flex justify-content-center">
    <div class="card w-100 shadow-lg" style="min-height: 80vh;">
      <div class="card-body p-4">
        <h5 class="card-title fw-semibold mb-4 text-center">Liste des Techniciens</h5>
        <a href="{{ path('ajouter_technicien') }}" class="btn btn-primary mb-4">Ajouter Technicien</a>
        <div class="table-responsive">
          <table class="table table-bordered text-nowrap mb-0 align-middle text-center" style="width: 100%; font-size: 1.1rem;">
            <thead class="text-dark fs-4">
              <tr>
                <th class="border-bottom-2 py-3"><h6 class="fw-semibold mb-0">Id</h6></th>
                <th class="border-bottom-2 py-3"><h6 class="fw-semibold mb-0">Nom</h6></th>
                <th class="border-bottom-2 py-3"><h6 class="fw-semibold mb-0">Email</h6></th>
                <th class="border-bottom-2 py-3"><h6 class="fw-semibold mb-0">Action</h6></th>
              </tr>
            </thead>
            <tbody>
            {% for item in techniciens %}
              <tr style="height: 60px;">
                <td class="border-bottom-1"><h6 class="fw-semibold mb-0">{{ item.id }}</h6></td>
                <td class="border-bottom-1"><h6 class="fw-semibold mb-1">{{ item.nom }}</h6></td>
                <td class="border-bottom-1"><p class="mb-0 fw-normal">{{ item.user.email }}</p></td>
                <td class="border-bottom-1">
                  <a href=""><button type="button" class="btn btn-dark m-1">Modifier</button></a>
                  <a href=""><button type="button" class="btn btn-danger m-1">Supprimer</button></a>
                </td>
              </tr> 
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

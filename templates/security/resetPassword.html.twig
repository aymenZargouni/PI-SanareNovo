{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h1 class="text-center">Réinitialisation du mot de passe</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_row(form.password.first, {
                                    'label': 'Nouveau mot de passe',
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nouveau mot de passe'}
                                }) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(form.password.second, {
                                    'label': 'Confirmez le mot de passe',
                                    'attr': {'class': 'form-control', 'placeholder': 'Confirmez votre nouveau mot de passe'}
                                }) }}
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary">Réinitialiser le mot de passe</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Dashboard Rendez-vous{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 90%;
        font: 18px/1.5 'Roboto', sans-serif;
    }
    h2 {
        text-align: center;
        color: #007bff;
        margin-bottom: 20px;
        font-size: 24px;
    }
    /* Style du tableau */
    table {
        width: 100%;
        border-collapse: collapse;
        background: #ffffff;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        font-size: 16px;
    }
    table thead {
        background: #007bff;
        color: #fff;
        text-align: left;
    }
    table th, table td {
        padding: 12px 15px;
        border: 1px solid #ddd;
    }
    table tbody tr:nth-child(even) {
        background: #f8f9fa;
    }
    table tbody tr:hover {
        background: #e2f0ff;
        transition: 0.3s;
    }
    /* Style des badges */
    .badge {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        font-weight: bold;
        text-align: center;
        display: inline-block;
    }
    .badge-success {
        background: #28a745;
        color: #fff;
    }
    .badge-warning {
        background: #ffc107;
        color: #fff;
    }
    .badge-danger {
        background: #dc3545;
        color: #fff;
    }
    /* Liens boutons */
    .btn-action {
        padding: 5px 10px;
        border-radius: 5px;
        font-size: 14px;
        display: inline-block;
        text-decoration: none;
        font-weight: bold;
        transition: 0.3s;
    }
    .btn-update {
        background: #ffc107;
        color: #fff;
    }
    .btn-update:hover {
        background: #e0a800;
    }
    .btn-delete {
        background: #dc3545;
        color: #fff;
    }
    .btn-delete:hover {
        background: #c82333;
    }
</style>

<div class="example-wrapper"> 
    <h2>üìÖ Mes Rendez-vous</h2>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Motif</th>
                <th>Statut</th>
                <th>M√©decin</th>
                {% if is_granted('ROLE_MEDECIN') %}
                    <th>Actions</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
            {% for rdv in showrv %}
            <tr>
                <td>{{ rdv.id }}</td>
                <td>{{ rdv.dateR|date('Y-m-d') }}</td>
                <td>{{ rdv.motif }}</td>
                <td>
                    {% if rdv.statut == 'Confirm√©' %}
                        <span class="badge badge-success">{{ rdv.statut }}</span>
                    {% elseif rdv.statut == 'En attente' %}
                        <span class="badge badge-warning">{{ rdv.statut }}</span>
                    {% else %}
                        <span class="badge badge-danger">{{ rdv.statut }}</span>
                    {% endif %}
                </td>
                <td>{{ rdv.medecin.fullname }}</td>
                {% if is_granted('ROLE_MEDECIN') %}
                <td>
                    <a href="{{ path('app_update_rdv_status', { id: rdv.id, status: 'Confirm√©' }) }}" class="btn-action btn-success">Confirm√©</a>
                    <a href="{{ path('app_update_rdv_status', { id: rdv.id, status: 'En attente' }) }}" class="btn-action btn-warning">En attente</a>
                    <a href="{{ path('app_update_rdv_status', { id: rdv.id, status: 'Annul√©' }) }}" class="btn-action btn-danger">Annul√©</a>
                    <a href="{{ path('app_update_rdv_status', { id: rdv.id, status: 'Termin√©' }) }}" class="btn-action btn-primary">Termin√©</a>
                </td>
                {% endif %}
            </tr>
            {% else %}
            <tr>
                <td colspan="5" class="text-center">Aucun rendez-vous trouv√©.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>


{% endblock %}

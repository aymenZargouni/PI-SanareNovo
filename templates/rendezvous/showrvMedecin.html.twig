{# templates/rendezvous/medecin_rendezvous.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Rendez-vous{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center my-4">Mes Rendez-vous</h1>

    {% if rendezvous is empty %}
        <div class="alert alert-info">Vous n'avez aucun rendez-vous.</div>
    {% else %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Heure</th>
                    <th>Patient</th>
                    <th>Motif</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                {% for rv in rendezvous %}
                    <tr>
                        <td>{{ rv.dateR|date('d/m/Y') }}</td>
                        <td>{{ rv.dateR|date('H:i') }}</td>
                        <td>{{ rv.patient.fullname }}</td>
                        <td>{{ rv.motif }}</td>
                        <td>{{ rv.statut }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}
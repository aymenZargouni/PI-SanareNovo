{% extends 'base.html.twig' %}

{% block title %}Changer le statut de la candidature{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Changer le statut de la candidature</h1>

        <form method="POST">
            {{ form_start(form_statut) }}
            <div class="form-group">
                {{ form_row(form_statut.statut) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Changer statut</button>
            </div>
            {{ form_end(form_statut) }}
        </form>

        <a href="{{ path('candidature_liste') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>
    </div>
{% endblock %}

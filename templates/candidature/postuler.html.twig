{# templates/candidature/postuler.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Postuler à l'offre : {{ offre.titre }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Postuler à l'offre "{{ offre.titre }}"</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Formulaire de candidature</h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="form-group mb-3">
                            <label for="nom" class="form-label">Nom</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            <label for="prenom" class="form-label">Prénom</label>
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.cv, 'CV (PDF uniquement)', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.cv, {'attr': {'class': 'form-control'}}) }}
                            <div class="invalid-feedback">
                                Veuillez télécharger un fichier PDF.
                            </div>
                        </div>
                        

                        <div class="form-group mb-3">
                            <label for="lettreMotivation" class="form-label">Lettre de motivation</label>
                            {{ form_widget(form.lettreMotivation, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('listOffreCondidat') }}" class="btn btn-secondary">Retour à la liste des offres</a>
                            <button type="submit" class="btn btn-success">Envoyer ma candidature</button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'rh.html.twig' %}

{% block title %}Créer une Nouvelle Offre{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center mb-4">Créer une Nouvelle Offre</h2>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="card shadow-lg p-4">
        <div class="card-body">
            <div class="mb-4">
                <h4 class="text-primary">Détails de l'Offre</h4>
            </div>

            <div class="mb-3">
                {{ form_label(form.titre, 'Titre de l\'offre', {'label_attr': {'class': 'form-label text-muted'}}) }}
                <div class="input-group">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le titre de l\'offre'}}) }}
                </div>
                {{ form_errors(form.titre) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label text-muted'}}) }}
                <div class="input-group">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez une description de l\'offre', 'rows': 4}}) }}
                </div>
                {{ form_errors(form.description) }}
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.datePublication, 'Date de Publication', {'label_attr': {'class': 'form-label text-muted'}}) }}
                    <div class="input-group">
                        {{ form_widget(form.datePublication, {'attr': {'class': 'form-control form-control-lg', 'type': 'date'}}) }}
                    </div>
                    {{ form_errors(form.datePublication) }}
                </div>

                <div class="col-md-6 mb-3">
                    {{ form_label(form.dateExpiration, 'Date d\'Expiration', {'label_attr': {'class': 'form-label text-muted'}}) }}
                    <div class="input-group">
                        {{ form_widget(form.dateExpiration, {'attr': {'class': 'form-control form-control-lg', 'type': 'date'}}) }}
                    </div>
                    {{ form_errors(form.dateExpiration) }}
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-lg btn-primary px-4 py-2">
                    <i class="bi bi-file-earmark-plus"></i> Créer l'Offre
                </button>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}

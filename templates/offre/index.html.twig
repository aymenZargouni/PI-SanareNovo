{% extends 'rh.html.twig' %}

{% block title %}Liste des Offres{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center text-primary mb-4">ğŸ“‹ Liste des Offres</h2>

    <!-- Bouton pour ajouter une offre -->
    <div class="text-center mb-4">
        <a href="{{ path('offre_new') }}" class="btn btn-success">
            â• Ajouter une Offre
        </a>
    </div>

    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Offres disponibles</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover mt-3">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>#</th>
                            <th>ğŸ· Titre</th>
                            <th>ğŸ“ Description</th>
                            <th>ğŸ“… Expiration</th>
                            <th>ğŸ›  Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for offre in offres %}
                            <tr>
                                <td>{{ offre.id }}</td>
                                <td>{{ offre.titre }}</td>
                                <td>{{ offre.description }}</td>
                                <td>{{ offre.dateExpiration|date('d/m/Y H:i') }}</td>
                                <td class="text-center">
                                    <a href="{{ path('offre_edit', {'id': offre.id}) }}" class="btn btn-warning btn-sm">âœ Modifier</a>
                                    <a href="{{ path('offre_delete', {'id': offre.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('ÃŠtes-vous sÃ»r de vouloir supprimer cette offre ?')">ğŸ—‘ Supprimer</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">Aucune offre disponible</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            
            <div id="message" class="mt-3 text-center"></div>
        </div>
    </div>
</div>

<!-- Script AJAX en dehors de la boucle -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        function supprimerOffresExpirees() {
            fetch('/offres/supprimer-expirees', {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('message').innerHTML = 
                        `<div class="alert alert-success">${data.message}</div>`;
                    setTimeout(() => location.reload(), 2000);
                }
            })
            .catch(error => console.error('Erreur AJAX:', error));
        }
    
        // VÃ©rifier toutes les 60 secondes (1 minute)
        setInterval(supprimerOffresExpirees, 60000);
    });
    </script>
    
{% endblock %}

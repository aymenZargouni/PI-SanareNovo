{% extends 'admin.html.twig' %}

{% block title %}Update Category{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center text-info"><i class="fas fa-edit"></i> Update Category</h2>

        {% if success is defined and success %}
            <div class="alert alert-success text-center"><i class="fas fa-check-circle"></i> Category updated successfully!</div>
        {% endif %}

        {{ form_start(formCategory, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
            <div class="mb-3">
                {{ form_label(formCategory.name, 'Category Name', { 'label_attr': { 'class': 'form-label' } }) }}
                {{ form_widget(formCategory.name, { 'attr': { 'class': 'form-control', 'placeholder': 'Enter category name' } }) }}
                {{ form_errors(formCategory.name) }}
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary"><i class="fas fa-sync"></i> Update Category</button>
            </div>
        {{ form_end(formCategory) }}
    </div>
</div>
{% endblock %}

{% extends 'admin.html.twig' %}

{% block title %}SenareNovo - Show Category{% endblock %}

{% block body %}
<br><br><br>
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary"><i class="fas fa-list"></i> Category List</h2>
        <a href="{{ path('addFormCategory') }}" class="btn btn-success"><i class="fas fa-plus"></i> Add New Category</a>
    </div>

    <div class="row">
        {% for category in categories %}
        <div class="col-md-4">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <h5 class="card-title">{{ category.name }}</h5>
                    <div class="d-flex justify-content-between">
                        <a href="{{ path('updateFormCategory', {'id': category.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="{{ path('deleteCategory', {'id': category.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <p class="col-12 text-center text-muted">No categories found.</p>
        {% endfor %}
    </div>
</div>
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
            <i class="fas fa-exclamation-triangle"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
            <i class="fas fa-exclamation-circle"></i> {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endblock %}
